<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Ok" Click="Button_Click"></Button>
            <Label x:Name="message" Content="Server message here" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26"></Label>
        </StackPanel>
    </Grid>
</Window>
